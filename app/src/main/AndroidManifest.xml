<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sanal.gmail.android.PetCare">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/petlogo55"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/petlogo55"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="stateVisible|adjustResize">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".doctor" />
        <activity android:name=".doctorlogin" />
        <activity android:name=".petownerlogin" />
        <activity android:name=".petowner" />
        <activity android:name=".petownersignup" />
        <activity android:name=".doctorsignup" />
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" />
        <activity android:name=".doctor1" />
        <activity android:name=".petowner1" />
        <activity
            android:name=".doctorassignment"
            android:windowSoftInputMode="stateVisible|adjustResize" />
        <activity android:name=".pettable" />
        <activity android:name=".setappointment" />
        <activity android:name=".Vaccine" />
        <activity android:name=".Tips"></activity>
    </application>

</manifest>